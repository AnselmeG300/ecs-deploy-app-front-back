{
    "family": "wordpress-db",
    "containerDefinitions": [
        {
            "name": "wordpress-db",
            "image": "bitnami/mariadb",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 3306,
                    "hostPort": 3306,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "MARIADB_DATABASE",
                    "value": "wordpress-db"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "ebs-wordpress-volume",
                    "containerPath": "/bitnami/mariadb",
                    "readOnly": false
                }
            ],
            "volumesFrom": [],
            "secrets": [
                {
                    "name": "MARIADB_USER",
                    "valueFrom": "arn:aws:secretsmanager:us-west-2:925037323203:secret:wordpress_secrets-P9zkqr:user::"
                },
                {
                    "name": "MARIADB_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:us-west-2:925037323203:secret:wordpress_secrets-P9zkqr:password::"
                },
                {
                    "name": "MARIADB_ROOT_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:us-west-2:925037323203:secret:wordpress_secrets-P9zkqr:password::"
                }
            ],
            "user": "root",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "wordpress-db-container",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "wordpress-db"
                }
            },
            "systemControls": []
        }
    ],
    "executionRoleArn": "arn:aws:iam::925037323203:role/ecs-task-role",
    "networkMode": "awsvpc",
    "volumes": [
        {
            "name": "ebs-wordpress-volume",
            "configuredAtLaunch": true
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "tags": [
        {
            "key": "Name",
            "value": "wordpress-prod-task-back"
        }
    ]
}